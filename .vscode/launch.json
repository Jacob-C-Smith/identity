    "version": "0.2.0",
    "configurations":
    [
        {
            "name": "front/back end",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/example/main.go"
        },
        {
            "name": "identity server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/identity_server",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands":
            [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-lldb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}